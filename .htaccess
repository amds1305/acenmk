
# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Éviter les boucles de redirection
  RewriteCond %{REQUEST_URI} !^/index\.php
  
  # Ne pas rediriger les demandes de fichiers ou répertoires réels
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Servir directement les ressources statiques
  RewriteRule \.(css|js|jpg|jpeg|png|gif|ico|svg|webp)$ - [L]
  
  # Traiter les fichiers .tsx et .ts comme JavaScript
  <FilesMatch "\.(ts|tsx)$">
    ForceType application/javascript
  </FilesMatch>
  
  # Rediriger toutes les autres requêtes vers index.html pour le SPA
  RewriteRule ^(.*)$ index.html [L]
</IfModule>

# Types MIME pour les fichiers statiques
<IfModule mod_mime.c>
  AddType text/javascript .js
  AddType text/javascript .mjs
  AddType text/javascript .ts
  AddType text/javascript .tsx
  AddType application/json .json
  AddType text/css .css
</IfModule>

# Désactiver le cache pendant le développement
<IfModule mod_headers.c>
  Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
  Header set Pragma "no-cache"
  Header set Expires "0"
  
  # Sécurité et CORS
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization"
  Header set X-Content-Type-Options "nosniff"
</IfModule>

# Empêcher l'affichage des répertoires
Options -Indexes

# Protection des fichiers sensibles
<FilesMatch "(\.env|\.gitignore|composer\.json|package\.json)$">
  Order allow,deny
  Deny from all
</FilesMatch>
