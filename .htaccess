
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Servir directement les ressources existantes
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Gérer les assets spécifiques de Vite/React
  RewriteRule ^(assets)/(.*) /assets/$2 [L]
  
  # Gérer le fichier de débogage
  RewriteRule ^debug\.js$ /debug.js [L]
  
  # Rediriger toutes les autres requêtes vers index.php pour le routage React
  RewriteRule ^ index.php [QSA,L]
</IfModule>

# Activer la compression GZIP
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# Headers pour permettre les CORS et améliorer la sécurité
<IfModule mod_headers.c>
  # Headers CORS
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET,POST,PUT,DELETE,OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization"
  
  # Headers de sécurité recommandés
  Header set X-Content-Type-Options "nosniff"
  Header set Content-Security-Policy "frame-ancestors 'self';"
  
  # Headers de cache
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
  </FilesMatch>
  <FilesMatch "\.(js|jsx|ts|tsx|css|json)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>

# Fix pour les types MIME
<IfModule mod_mime.c>
  AddType text/javascript .js
  AddType text/javascript .mjs
  AddType text/x-typescript .ts
  AddType text/x-typescript .tsx
  AddType text/css .css
</IfModule>

# Réglages de cache
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType text/x-typescript "access plus 1 month"
</IfModule>
