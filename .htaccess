
# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Éviter les boucles de redirection
  RewriteCond %{REQUEST_URI} !^/index\.php
  
  # Ne pas rediriger les demandes de fichiers ou répertoires réels
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Rediriger toutes les autres requêtes vers index.html pour le SPA
  RewriteRule ^(.*)$ index.html [L]
</IfModule>

# Types MIME pour les fichiers statiques - configuration TRÈS explicite
<IfModule mod_mime.c>
  # JavaScript et TypeScript (forcer application/javascript)
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType application/javascript .jsx
  AddType application/javascript .ts
  AddType application/javascript .tsx
  
  # Autres types MIME communs
  AddType text/css .css
  AddType application/json .json
  AddType image/svg+xml .svg
  
  # Forcer le type MIME pour les fichiers TypeScript
  <FilesMatch "\.tsx?$">
    ForceType application/javascript
  </FilesMatch>
</IfModule>

# Configuration du cache
<IfModule mod_headers.c>
  # Désactiver le cache pour le développement
  Header set Cache-Control "no-cache, no-store, must-revalidate"
  Header set Pragma "no-cache"
  Header set Expires "0"
  
  # Sécurité et CORS
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization"
  Header set X-Content-Type-Options "nosniff"
  
  # Force le type MIME pour les fichiers .tsx
  <FilesMatch "\.tsx$">
    Header set Content-Type "application/javascript; charset=UTF-8"
  </FilesMatch>
</IfModule>

# Empêcher l'affichage des répertoires
Options -Indexes

# Protection des fichiers sensibles
<FilesMatch "(\.env|\.gitignore|composer\.json|package\.json)$">
  Order allow,deny
  Deny from all
</FilesMatch>
