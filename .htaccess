
# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Ne pas rediriger les demandes de fichiers ou répertoires réels
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Rediriger les requêtes d'API vers le dossier api/
  RewriteRule ^api/(.*)$ api/$1 [L,QSA]
  
  # Rediriger les autres requêtes vers index.html pour le traitement SPA
  RewriteRule ^(.*)$ index.html [L,QSA]
</IfModule>

# Définir les types MIME pour améliorer la compatibilité
<IfModule mod_mime.c>
  # Types JavaScript
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType application/javascript .jsx
  AddType application/javascript .ts
  AddType application/javascript .tsx
  
  # Types CSS et images
  AddType text/css .css
  AddType image/svg+xml .svg
</IfModule>

# Forcer l'interprétation des fichiers PHP
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Définir le type MIME pour les fichiers PHP
AddType application/x-httpd-php .php

# Activer l'exécution des scripts PHP
Options +ExecCGI
AddHandler php-script .php
