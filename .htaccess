
# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Éviter les boucles de redirection
  RewriteCond %{REQUEST_URI} !^/index\.php
  
  # Ne pas rediriger les demandes de fichiers ou répertoires réels
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Servir directement les fichiers JavaScript et TypeScript avec le bon MIME type
  <FilesMatch "\.(js|mjs|ts|tsx)$">
    SetHandler application/javascript
  </FilesMatch>
  
  # Servir directement les ressources statiques
  RewriteRule \.(css|js|jpg|jpeg|png|gif|ico|svg|webp|mjs|ts|tsx)$ - [L]
  
  # Rediriger toutes les autres requêtes vers index.html pour le SPA
  RewriteRule ^(.*)$ index.html [L]
</IfModule>

# Types MIME pour les fichiers statiques
<IfModule mod_mime.c>
  AddType application/javascript .js .mjs .ts .tsx
  AddType text/css .css
  AddType application/json .json
  AddType image/svg+xml .svg
</IfModule>

# Activer le module FastCGI si disponible
<IfModule mod_fastcgi.c>
  AddHandler fastcgi-script .fcgi
</IfModule>

# Désactiver le cache pendant le développement
<IfModule mod_headers.c>
  Header set Cache-Control "no-cache, max-age=0"
  
  # Sécurité et CORS
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization"
  Header set X-Content-Type-Options "nosniff"
</IfModule>

# Empêcher l'affichage des répertoires
Options -Indexes

# Protection des fichiers sensibles
<FilesMatch "(\.env|\.gitignore|composer\.json|package\.json)$">
  Order allow,deny
  Deny from all
</FilesMatch>
