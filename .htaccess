
# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Éviter les boucles de redirection
  RewriteCond %{REQUEST_URI} !^/index\.php
  
  # Ne pas rediriger les demandes de fichiers ou répertoires réels
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Rediriger toutes les autres requêtes vers index.html pour le SPA
  RewriteRule ^(.*)$ index.html [L]
</IfModule>

# Types MIME pour les fichiers statiques
<IfModule mod_mime.c>
  # Configuration très explicite pour JavaScript et TypeScript
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType application/javascript .ts
  AddType application/javascript .tsx
  
  # Autres types MIME communs
  AddType text/css .css
  AddType application/json .json
  AddType image/svg+xml .svg
</IfModule>

# Pour s'assurer que les fichiers JavaScript/TypeScript sont traités correctement
<FilesMatch "\.(js|mjs|ts|tsx)$">
  ForceType application/javascript
  Header set Content-Type application/javascript
</FilesMatch>

# Désactiver le cache pendant le développement
<IfModule mod_headers.c>
  Header set Cache-Control "no-cache, max-age=0"
  
  # Sécurité et CORS
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization"
  Header set X-Content-Type-Options "nosniff"
</IfModule>

# Empêcher l'affichage des répertoires
Options -Indexes

# Protection des fichiers sensibles
<FilesMatch "(\.env|\.gitignore|composer\.json|package\.json)$">
  Order allow,deny
  Deny from all
</FilesMatch>
