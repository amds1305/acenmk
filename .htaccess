
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Servir directement les ressources existantes
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Gérer les assets spécifiques de Vite/React
  RewriteRule ^(assets)/(.*) /assets/$2 [L]
  
  # Gérer le fichier de débogage
  RewriteRule ^debug\.js$ /debug.js [L]
  
  # Rediriger toutes les autres requêtes vers index.php pour le routage React
  RewriteRule ^ index.php [QSA,L]
</IfModule>

# Désactiver le cache pour le développement
<IfModule mod_headers.c>
  # Headers CORS
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET,POST,PUT,DELETE,OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization"
  
  # Headers de sécurité recommandés
  Header set X-Content-Type-Options "nosniff"
  
  # Désactiver complètement le cache pour le dépannage
  <FilesMatch ".(html|htm|js|jsx|ts|tsx|css|json)$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  
  # Types MIME spécifiques pour TypeScript
  <FilesMatch "\.ts$">
    ForceType text/javascript
    Header set Content-Type "text/javascript; charset=UTF-8"
  </FilesMatch>
  
  <FilesMatch "\.tsx$">
    ForceType text/javascript
    Header set Content-Type "text/javascript; charset=UTF-8"
  </FilesMatch>
</IfModule>

# Fix pour les types MIME - IMPORTANT: servir TS/TSX comme JavaScript
<IfModule mod_mime.c>
  AddType text/javascript .js
  AddType text/javascript .mjs
  AddType text/javascript .ts
  AddType text/javascript .tsx
  AddType text/css .css
</IfModule>
