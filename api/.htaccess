
# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /api/
  
  # Ne pas rediriger les demandes de fichiers ou répertoires réels
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Rediriger les requêtes vers index.php pour le traitement
  RewriteRule ^(.*)$ index.php [L,QSA]
</IfModule>

# Forcer l'interprétation des fichiers PHP
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Définir le type MIME pour les fichiers PHP
AddType application/x-httpd-php .php

# Activer l'exécution des scripts PHP
Options +ExecCGI
AddHandler php-script .php

# Permettre l'accès CORS pour l'API
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Traiter les requêtes OPTIONS (pre-flight)
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>
